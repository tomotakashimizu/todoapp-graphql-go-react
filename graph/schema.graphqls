# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Todo {
  id: ID!
  text: String!
  done: Boolean!
  userId: String!
  user: User!
}

type User {
  id: ID!
  name: String!
}

type Query {
  todos: [Todo!]!
}

input TodoInput {
  text: String!
  done: Boolean!
}

type Mutation {
  createTodo(input: TodoInput!): Boolean!
  updateTodo(input: TodoInput!): Boolean!
}
